<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/fifteen">

    <TextView
        android:id="@+id/tv0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="请选择登录方式"
        android:textColor="@android:color/black"
        android:textSize="@dimen/font_m" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv0"
        android:layout_centerHorizontal="true">

        <ImageButton
            android:id="@+id/imgbtn_qq"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_marginTop="@dimen/ten"
            android:background="@drawable/ssdk_oks_skyblue_logo_qq_checked"
            android:onClick="qq_login" />

        <ImageButton
            android:id="@+id/imgbtn_weibo"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_marginLeft="@dimen/fifteen"
            android:layout_marginTop="@dimen/ten"
            android:layout_toRightOf="@id/imgbtn_qq"
            android:background="@drawable/ssdk_oks_skyblue_logo_sinaweibo_checked"
            android:onClick="weibo_login" />
    </RelativeLayout>
</RelativeLayout>