<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/title_green2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/one"
        android:background="@drawable/griditem_selector">

        <ImageView
            android:id="@+id/photo"
            android:layout_width="@dimen/ninety"
            android:layout_height="@dimen/ninety"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/two"
            android:src="@drawable/empty_photo" />

        <TextView
            android:id="@+id/photo_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/photo"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/two"
            android:maxLines="1"/>

    </RelativeLayout>
</RelativeLayout>